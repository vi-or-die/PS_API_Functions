Function DumpHiveCases {
<#
        .DESCRIPTION
        Dumps all Hive Cases.

        .PARAMETER HiveUri
        Specifies the base uri for the Hive server.

        .Parameter HiveToken
        Specifies api key for access to Hive. 

        .EXAMPLE
        DumpHiveCases -HiveUri "http://server.domain.com:9002/api" -HiveToken "tH1sIsth3ap1keY/Pr0vid3diNtH3hiV3"

        .NOTES
        This was created by VI-or-Die.

        .NOTES
        If case totals are more than 1000 see comment in function.
    #>
    param(
        [Parameter(mandatory=$True)] [string]$HiveToken,
        [Parameter(mandatory=$True)] [string]$HiveUri
    )


    # To increase quantity of case output modify range to be "0-x". Where x is the max number of cases to export.
    [string]$API_Uri = "$HiveUri/case/_search?range=0-1000"
    [string]$API_Method = "Post"
    $API_headers = @{Authorization = "Bearer $HiveToken"}
    $body = @{
        query = @{}
    }

    $JsonBody = $body | ConvertTo-Json -Depth 5 -Compress
    Invoke-RestMethod -Uri $API_Uri -Headers $API_headers -Body $jsonbody -Method $API_Method -ContentType 'application/json' -Verbose
}
